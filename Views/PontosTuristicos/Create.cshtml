@model TurismoApp.Models.PontoTuristico

@{
    ViewData["Title"] = "Novo Ponto Turístico";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="me-4">
            <img src="/images/logo.jpg" alt="Logotipo" style="width:140px; height:auto; object-fit:contain;" />
        </div>
        <div>
            <h1 class="h4 mb-0">Cadastro de Ponto Turístico</h1>
            <small class="text-muted">Preencha os dados abaixo</small>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Create" method="post" asp-antiforgery="true" class="card p-4 shadow-sm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                @await Html.PartialAsync("~/Pages/Shared/_LocationFields.cshtml", Model)

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="4" style="resize: none;"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="d-flex align-items-center mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-auto">Voltar</a>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

