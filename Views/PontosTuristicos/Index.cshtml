@using System.Linq
@model IEnumerable<TurismoApp.Models.PontoTuristico>

@{
    ViewData["Title"] = "Pontos Turísticos";
    var termoBusca = Convert.ToString(ViewBag.TermoBusca) ?? "";
    var paginaAtual = Convert.ToInt32(ViewBag.PaginaAtual ?? 1);
    var totalPaginas = Convert.ToInt32(ViewBag.TotalPaginas ?? 1);
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <img src="~/images/logo.jpg" alt="Logo" style="width:120px; height:auto; object-fit:contain;" class="me-3" />
            <div>
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="termoBusca" class="form-control me-2" placeholder="Buscar por nome, descrição ou localização..." value="@termoBusca" />
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Create" class="btn btn-success">cadastrar um ponto turístico</a>
        </div>
    </div>

    @if (!Model.Any())
    {
        if (!string.IsNullOrWhiteSpace(termoBusca))
        {
            <div class="alert alert-warning mt-3">Nenhum resultado encontrado para "<strong>@Html.Encode(termoBusca)</strong>".</div>
        }
        else
        {
            <div class="alert alert-info mt-3">Ainda não há cadastros.</div>
        }
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item mb-3 shadow-sm">
                    <h5 class="mb-2">@item.Nome</h5>
                    <p class="mb-2 text-muted small">@item.Estado - @item.Cidade</p>
                    <p class="mb-3">@item.Descricao</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">ver detalhes</a>
                </div>
            }
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div>
                @if (paginaAtual > 1)
                {
                    <a class="link-primary" asp-action="Index" asp-route-pagina="@(paginaAtual - 1)" asp-route-termoBusca="@termoBusca">Voltar</a>
                }
            </div>

            <div>
                @if (paginaAtual < totalPaginas)
                {
                    <a class="link-primary" asp-action="Index" asp-route-pagina="@(paginaAtual + 1)" asp-route-termoBusca="@termoBusca">Avançar</a>
                }
            </div>
        </div>
    }
</div>

